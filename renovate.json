{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate configuration recommended by the Wayfair OSPO",
  "labels": [
    "renovate/{{depName}}"
  ],
  "extends": [
    "config:base",
    "schedule:earlyMondays",
    ":rebaseStalePrs"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "Minor Packages",
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchPackageNames": ["gatsby"],
      "matchPackagePrefixes": ["gatsby-"],
      "groupName": "Gatsby"
    },
    {
      "matchPackageNames": ["react"],
      "matchPackagePrefixes": ["react-"],
      "groupName": "React"
    },
    {
      "matchPackageNames": ["webpack"],
      "matchPackagePrefixes": ["webpack-"],
      "groupName": "Webpack",
      "allowedVersions": "5.72.x"
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions"
    }
  ]
}
